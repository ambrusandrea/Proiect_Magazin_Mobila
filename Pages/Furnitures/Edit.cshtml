@page
@model Proiect_Magazin_Mobila.Pages.Furnitures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Furniture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Furniture.ID" />
            <div class="form-group">
                <label asp-for="Furniture.Name" class="control-label"></label>
                <input asp-for="Furniture.Name" class="form-control" />
                <span asp-validation-for="Furniture.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Furniture.Price" class="control-label"></label>
                <input asp-for="Furniture.Price" class="form-control" />
                <span asp-validation-for="Furniture.Price" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Furniture.DesignerID" class="control-label">Designer Name</label>
                <select asp-for="Furniture.DesignerID" class="form-control" asp-items="ViewBag.DesignerID">
                </select>
                <span asp-validation-for="Furniture.DesignerID" class="text-danger"></span>
            </div>
            <div class="form-group">
 <div class="table">
 <table>
 <tr>
 @{
 int cnt = 0;
 foreach (var cat in Model.AssignedMaterialDataList)
{
 if (cnt++ % 3 == 0)
{
@:</tr><tr>
}
@:<td>
 <input type="checkbox"
 name="selectedCategories"
 value="@cat.MaterialID"
 @(Html.Raw(cat.Assigned ?
"checked=\"checked\"" : "")) />
 @cat.MaterialID @: @cat.Name
 @:</td>
 }
 @:</tr>
}
 </table>
 </div>
 </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
